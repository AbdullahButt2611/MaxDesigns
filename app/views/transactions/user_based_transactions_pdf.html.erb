<section class="contactFormContainer l-section verticalFlexContainer pdfContainer">

    <div class="leftRightContainer user_amount_left_right">
        <div class="pdfLogoImage">
            <p class="contactForm__subtitle"><%= wicked_pdf_image_tag 'logoGrey.png'%></p>
        </div>
        <div class="pdfDate">
            <p class="pdfDate__subtitle"><%= amount_date_formatiing(DateTime.now) %></p>
        </div>
    </div>

    <p class="contactForm__subtitle section__title"  id="report_heading">Transactions Transcript</p>

    <div class="verticalFlexContainer registeredUsersContainer ItemsTable">
        <div class="leftRightContainer">
            <h1 class="section__title">Your History</h1>
        </div>

        <table class="table">
            <div id="header">
                <thead class="thead-light">
                <tr>
                    <th scope="col">Project Name</th>
                    <th scope="col">Owner Name</th>
                    <th scope="col">Order Reference</th>
                    <th scope="col">Amount Paid</th>
                    <th scope="col">Date Time</th>
                </tr>
            </thead>
            

            <tbody>
                <% @user_transactions_data.each do |trans_data|%>
                    <tr id="<%= trans_data.id %>">
                        <th data-title = "Project Name" scope="row"><%= find_project_from_order(trans_data.order_id).name %></th>
                        <th data-title = "Owner Name"><%= find_project_from_order(trans_data.order_id).client_name %></th>
                        <th data-title = "Order Ref#"><%= trans_data.order_id %></th>
                        <th data-title = "Amount Received">Rs: <%= trans_data.amount_paid %></th>
                        <th data-title = "Date Time"><%= amount_date_formatiing(trans_data.date) %></th>
                    </tr>
                <% end%>
                
            </tbody>
    
            
        </table>
    </div>

</section>