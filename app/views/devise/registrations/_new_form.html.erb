<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "verticalFlexContainer"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, placeholder: "Name" %>
      </div>

      <div class="field">
        <%= f.text_field :username, placeholder: "Username" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
      </div>

      <div class="field">
        <%= f.telephone_field :contact, placeholder: "Contact Number" %>
      </div>

      <div class="field">
        <%= f.hidden_field :pay, value: "0" %>
      </div>

      <div class="field">
        <%= f.select :qualification, options_for_select(["Basic", "Matric", "FA/FSc", "Graduated", "Master", "Specialization", "Diploma"]) %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "blackFillButton" %>
      </div>

      <%= render "devise/shared/links" %>

<% end %>