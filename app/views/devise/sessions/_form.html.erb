<%= form_for(resource, as: resource_name,url: session_path(resource_name), :html => {:class => "verticalFlexContainer"})  do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password" , placeholder: "Password"%>
  </div>

  

  <% if devise_mapping.rememberable? %>
    <div class="rememberBox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "blackFillButton" %>
  </div>

  <%= render "devise/shared/links" %>
  
<% end %>