
<h1>Projects</h1>
<%= link_to "Create New", new_project_path, class: "blackFillButton" %>


<% @projects.each do |item|%>
        <h3 data-title = "Name" scope="row"><%= item.name %></h3>
        <p data-title = "Price"><%= item.client_name %></p>
        <h4 data-title = "Type"><%= item.contact %></h4>
        <th class="userUpdateLink "><%= link_to "Edit", edit_project_path(:id=>item.id), class: "blackFillButton" %></th>
        <th class="userRemoveLink"><%= link_to "Destroy", project_path(:id=>item.id),
            method: :delete,
            data: { confirm: "This step will remove the Item from your shop?\n Are you sure you want to delete this item" }, xhr: true, remote: true, class: "whiteFillButton" %>
        </th>
<% end%>