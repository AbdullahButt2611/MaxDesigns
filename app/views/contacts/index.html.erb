<section class="contactFormContainer l-section verticalFlexContainer">

    <p class="contactForm__subtitle section__title">Contact Requests</p>

    <div class="verticalFlexContainer registeredUsersContainer ItemsTable">

        <div class="leftRightContainer">
            <h1 class="section__title">Request Details</h1>
        </div>

        <table class="table">

            <thead class="thead-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Company</th>
                    <th scope="col">Message</th>
                    <th scope="col">Date Time</th>
                </tr>
            </thead>

            <tbody>
                <% @contacts.each do |contact|%>
                    <%= render "table_body_content", contact: contact %>
                <% end%>
            </tbody>
    
        </table>

    </div>
    
</section>

<%= render "layouts/footer" %>