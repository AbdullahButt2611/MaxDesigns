<section class="projectDashboardSection dashboardSection verticalFlexContainer">

    <div class="leftRightContainer">
        <h1>Project Details</h1>
    </div>

    <div class="dashboardCards">

        <div class="dashboardCard">

            <div class="leftIcon">
                <i class='bx bx-package'></i>
            </div>

            <div class="rightDash">
                <h3 class="dashCardTitle">Total Projects</h3>
                <h1 class="dashCardCounter dash__title"><%= @all_projects %></h1>
            </div>

        </div>

        <div class="dashboardCard">

            <div class="leftIcon">
                <i class='bx bx-checkbox-checked' ></i>
            </div>

            <div class="rightDash">
                <h3 class="dashCardTitle">Completed Projects</h3>
                <h1 class="dashCardCounter dash__title"><%= @complete_projects %></h1>
            </div>

        </div>

        <div class="dashboardCard">

            <div class="leftIcon">
                <i class='bx bx-circle-three-quarter'></i>
            </div>

            <div class="rightDash">
                <h3 class="dashCardTitle">In-Process Projects</h3>
                <h1 class="dashCardCounter dash__title"><%= @uncomplete_projects %></h1>
            </div>

        </div>
        
    </div>

</section>

<section class="itemDashboardSection dashboardSection verticalFlexContainer">

    <div class="leftRightContainer">
        <h1>Vending Management</h1>
    </div>

    <div class="dashboardCards">

